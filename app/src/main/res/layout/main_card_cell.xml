<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/accent_2"
        android:layout_height="290dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="30dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="40dp">

            <TextView
                android:id="@+id/card_note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is dummy"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/card_note_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="sdbfhkjdsbfhjbskhbvkdsbvjdsbkcjvbcskjsxvbkcjxbvkjcbxkjvbxckjbvkjxcbvkjxcbvk"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>